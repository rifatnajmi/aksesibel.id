<aside class="post-attr">
	<h2 class="h5">Saran atribusi:</h2>

	{% set authors_data = grav.config.get('authors') %}
	{% set authors = page.header.authors is iterable ? page.header.authors : [page.header.authors] %}
	{% set author_names = [] %}

	{% if authors and authors[0] is not empty %}
	{% for id in authors %}
	{% set author = authors_data[id] ?? null %}
	{% if author and author.name %}
	{% set author_names = author_names|merge([author.name]) %}
	{% else %}
	{% set author_names = author_names|merge([id ~ ' (tidak ditemukan)']) %}
	{% endif %}
	{% endfor %}

	{# Format daftar nama penulis #}
	{% if author_names|length == 1 %}
	{{ author_names[0] }}
	{% elseif author_names|length == 2 %}
	{{ author_names[0] }} &amp; {{ author_names[1] }}
	{% else %}
	{% for name in author_names %}
	{% if loop.last %}
	&amp; {{ name }}
	{% elseif loop.index == author_names|length - 1 %}
	{{ name }}
	{% else %}
	{{ name }},
	{% endif %}
	{% endfor %}
	{% endif %}

	{% else %}
	radikal studio
	{% endif %}

	({{ page.date|date("Y") }}). <em>{{ page.title }}</em>. Aksesibel. <a href="{{ page.url }}">{{ page.url }}</a>
</aside>
